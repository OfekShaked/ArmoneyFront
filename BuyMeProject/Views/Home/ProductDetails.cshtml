@model Product
@{
    var username = Context.Request.Cookies["userName"];
    
}
<div class="container bootdey">
    <div class="col-md-12">
        <section class="panel">
            <div class="panel-body">
                <div class="col-md-6">
                    <div class="pro-img-details">
                        <img src="data:image/png;base64,@Model.Picture1" width="400" height="400">
                    </div>
                    <div class="pro-img-list">
                            <img src="data:image/png;base64,@Model.Picture2" alt="" width="100" height="100">
                            <img src="data:image/png;base64,@Model.Picture3" alt="" width="100" height="100">
                    </div>
                </div>
                <div class="col-md-6">
                    <h4>
                        Product Title :
                    </h4>
                    <h6 class="pro-d-title">
                        @Model.Title
                    </h6>
                    <p>
                        <h5 class="pro-d-title"> Short Description : </h5>  @Model.ShortDescription
                    </p>
                    <div class="form-group">
                        <h5 class="pro-d-title"> Long Description : </h5>   @Model.LongDescription
                    </div>
                    <div class="form-group">
                        <h5 class="pro-d-title"> User created : </h5>   @Model.Owner.FirstName  @Model.Owner.LastName born in @Model.Owner.BirthDate Mail - @Model.Owner.Email
                    </div>
                    <div class="m-bot15"> <strong>Price : </strong> <span class="amount-old">$@Model.Price</span>  </div>
                    <div>
                        <form method="post" asp-action="AddProductToCart" asp-controller="Product">
                            <input type="hidden" name="username" value="@username" />
                            <input type="hidden" name="productId" value="@Model.Id" />
                            <button type="submit" class="btn btn-round btn-danger"><i class="fa fa-shopping-cart"></i> Add to cart</button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>