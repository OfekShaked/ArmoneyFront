@model Product
<div class="d-flex justify-content-between align-items-center mt-3 p-2 items rounded">
    <div class="d-flex flex-row">
        <img class="rounded" src="data:image/png;base64,@Model.Picture1" width="40">
        <div class="ml-2"><span class="font-weight-bold d-block"><a asp-action="ProductDetails" asp-controller="Product" asp-route-productId="@Model.Id">@Model.Title</a></span><span class="spec">@Model.ShortDescription</span></div>
    </div>
    <form class="product-in-cart">
        <div class="d-flex flex-row align-items-center"><span class="d-block"></span><span class="d-block ml-5 font-weight-bold"><input type="checkbox" checked="checked" class="product-checkbox"/></span></div>
        <input type="hidden" value="@Model.Id" class="id-of-product" />
    </form>
    <div class="d-flex flex-row align-items-center"><span class="d-block"></span><span class="d-block ml-5 font-weight-bold">$@Model.Price</span><i class="fa fa-trash-o ml-3 text-black-50"></i></div>
</div>